@model IEnumerable<BookReader.Models.Author>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Surname)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImagePath)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        <img src=@item.ImagePath width="39" height="53" alt="" class="fl" />
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.AuthorId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.AuthorId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.AuthorId })
                    </td>
                </tr>
            }

        </table>
    </div>
    <div class="col-md-1"></div>
</div>
<div class="row">
    <div class="col-md-1"></div>
    <div class="col-md-10">
        <div class="mainbar">
            <ul class="breadcrumb">
                <li><a href="@Url.Action("Index","Authors")">Authors editor</a> <span class="divider">/</span></li>
                <li><a href="@Url.Action("Index","Books")">Books editor</a> <span class="divider">/</span></li>
                <li><a href="@Url.Action("Index","Categories")">Categoris editor</a> <span class="divider">/</span></li>

            </ul>
        </div>
    </div>
    <div class="col-md-1"></div>
</div>